{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "\"./build.sh -c\"",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\msys64\\msys2_shell.cmd",
                    "args": ["-defterm", "-mingw64", "-no-start", "-here", "-shell bash -c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build Application",
            "type": "shell",
            "command": "\"./build.sh -a\"",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\msys64\\msys2_shell.cmd",
                    "args": ["-defterm", "-mingw64", "-no-start", "-here", "-shell bash -c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true
            }
        },
    ]
}